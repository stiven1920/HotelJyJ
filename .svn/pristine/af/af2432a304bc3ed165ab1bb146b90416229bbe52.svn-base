    private void btnReservarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnReservarActionPerformed
        
        PrincipalVista.PanelVista.remove(PrincipalVista.ventanaActual);
        PrincipalVista.PanelVista.repaint();
        PrincipalVista.ventanaActual = new HacerReservaVista(idHabitacion, cedula);
        PrincipalVista.PanelVista.add(PrincipalVista.ventanaActual);
    }//GEN-LAST:event_btnReservarActionPerformed

    private void btnVolverActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnVolverActionPerformed
        
