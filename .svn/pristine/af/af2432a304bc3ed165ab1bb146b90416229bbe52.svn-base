    public void MostrarHabitacion() {
        Habitacion habitacion = null;
        habitacion = controlHabitacion.buscarHabitacion(idHabitacion);

        if (habitacion != null) {
            lblDescripcion.setText(habitacion.getDescripcion());
            lblValor.setText("$" + habitacion.getValor() + "");
            lblTipoHabitacion.setText(habitacion.getTipoHabitacion());
            try {
                byte[] bi = habitacion.getFoto();
                BufferedImage imagen = null;
                InputStream in = new ByteArrayInputStream(bi);
                imagen = ImageIO.read(in);
                ImageIcon imgi = new ImageIcon(imagen.getScaledInstance(60, 60, 60));
                lblImagenHabitacion.setIcon(imgi);
            } catch (Exception e) {
                lblImagenHabitacion.setText("sin imagen");
            }
        }
    }

