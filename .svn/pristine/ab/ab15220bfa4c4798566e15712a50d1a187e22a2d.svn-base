    @Override
    public void mouseClicked(MouseEvent e) {
        for (int i = 0; i < labels.size(); i++) {
            if (labels.get(i) == e.getSource()) {
                DetalleHabitacionVista d = null;
                boolean o = false;
                if (huesped == false) {
                    String cedula = JOptionPane.showInputDialog("ingrese la cedula del huesped");
                    if (cedula.isEmpty()) {
                        JOptionPane.showMessageDialog(this, "debe ingresar el valor de la cedula");
                        o = false;
                    } else {
                        d = new DetalleHabitacionVista(Integer.parseInt(labels.get(i).getName()), Integer.parseInt(cedula),huesped);
                        o = true;
                    }
                } else {
                    d = new DetalleHabitacionVista(Integer.parseInt(labels.get(i).getName()), cedula, huesped);
                    o = true;
                }

                if (o) {
                    PrincipalVista.PanelVista.remove(PrincipalVista.ventanaActual);
                    PrincipalVista.PanelVista.repaint();
                    PrincipalVista.ventanaActual = d;
                    PrincipalVista.PanelVista.add(PrincipalVista.ventanaActual);
                }

            }
        }
    }

