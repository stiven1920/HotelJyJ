    public void mostrarHabitaciones() {
        labels = new ArrayList();
        habitaciones = controlHabitacion.listarHabitaciones();
        for (int i = 0; i < habitaciones.size(); i++) {
            JLabel l;
            try {
                byte[] bi = habitaciones.get(i).getFoto();
                BufferedImage imagen = null;
                InputStream in = new ByteArrayInputStream(bi);
                imagen = ImageIO.read(in);
                ImageIcon imgi = new ImageIcon(imagen.getScaledInstance(180, 180, 180));
                l = new JLabel(imgi);

            } catch (Exception e) {
                l = new JLabel(habitaciones.get(i).getIdHabitacion() + "");
            }
            l.setName(habitaciones.get(i).getIdHabitacion() + "");
            l.addMouseListener(this);
            contenedorJLabel.add(l);
            labels.add(l);
            contenedorJLabel.updateUI();
        }
    }

