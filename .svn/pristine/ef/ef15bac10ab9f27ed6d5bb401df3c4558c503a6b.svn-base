    private void btnComprarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnComprarActionPerformed

        if (selecciono) {
            if (txtCantidad.getText().isEmpty()) {
                JOptionPane.showMessageDialog(this, "debe ingresar la cantidad que va comprar");
            } else {
                int cantidad = Integer.parseInt(txtCantidad.getText());
                if (cantidad <= cantidadProducto) {
                    try {
                        int total = cantidad * valorProducto;
                        RegistroPedido registroP = new RegistroPedido(nombreProducto, cantidad, valorProducto, total, cedula, active.getHabitacionId());
                        controlRegistroPedido.guardarPedidoHuesped(registroP);
                        controlPedido.modificarStock((cantidadProducto - cantidad), idPedido);
                        listarCarrito(cedula);
                        listarTabla();
                        JOptionPane.showMessageDialog(null, "se agrego correctamente pÃ²r el valor total:" + total);
                        selecciono = false;
                    } catch (Exception e) {
                        JOptionPane.showMessageDialog(null, "no se pudo hacer el carrito");
                    }
                } else {
                    JOptionPane.showMessageDialog(this, "la cantidad requerida no se encuentra en el inventario debe cambiar la cantidad");
                    txtCantidad.setText("");
                }
            }
        } else {
            JOptionPane.showMessageDialog(this, "debe seleccionar primero una fila de la tabla producto");
        }
    }//GEN-LAST:event_btnComprarActionPerformed

    private void jTProductoMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTProductoMouseClicked
        // TODO add your handling code here:
        int clic = jTProducto.rowAtPoint(evt.getPoint());
        idPedido = (int) jTProducto.getValueAt(clic, 0);
        nombreProducto = "" + jTProducto.getValueAt(clic, 1);
        cantidadProducto = (int) jTProducto.getValueAt(clic, 2);
        valorProducto = (int) jTProducto.getValueAt(clic, 3);

        TxtProducto.setText(String.valueOf(idPedido));
        TxtNombreProducto.setText(nombreProducto);
        TxtValorProducto.setText(String.valueOf(valorProducto));

        try {
            JLabel lbl = (JLabel) jTProducto.getValueAt(clic, 4);
            jlbImagen.setIcon(lbl.getIcon());
        } catch (Exception e) {
        }
        selecciono = true;
    }//GEN-LAST:event_jTProductoMouseClicked

    private void tableCarritoMousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_tableCarritoMousePressed
        int row = tableCarrito.getSelectedRow();
        
        if (row > -1) {
            seleccionoEliminar = true;
            idRegistroPedido = (int) tableCarrito.getValueAt(row, 0);
        }
    }//GEN-LAST:event_tableCarritoMousePressed

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnEliminarActionPerformed
        if (seleccionoEliminar) {
            if (controlRegistroPedido.eliminar(idRegistroPedido)) {
                JOptionPane.showMessageDialog(this, "exito al eliminar el pedido");
                seleccionoEliminar = false;
                listarCarrito(cedula);
            }else {
                JOptionPane.showMessageDialog(this, "error la elminar el pedido");
            }
        }else{
            JOptionPane.showMessageDialog(this, "debe seleccionar primero una fila de la tabla carrito");
        }
    }//GEN-LAST:event_btnEliminarActionPerformed

